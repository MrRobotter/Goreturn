<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.FriendsIdentification">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:onClick="back">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back"
                android:clickable="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="朋友认证"
            android:textColor="@color/textTitle"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:onClick="skip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:text="跳过"
                android:textColor="@color/textTitle"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/titleLine" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="145.5dp"
        android:layout_height="145.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.5dp"
        android:background="@mipmap/dash_border"
        android:gravity="center">

        <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@mipmap/identification_qr" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:text="分享邀请二维码至"
        android:textColor="@color/textGray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/friend_circel"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="微信朋友圈"
            android:textColor="@color/textGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_login_wechart"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="微信好友"
            android:textColor="@color/textGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_login_qq"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="QQ好友"
            android:textColor="@color/textGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_login_weibo"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="微博"
            android:textColor="@color/textGray"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
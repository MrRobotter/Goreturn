<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScanActivity">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/scanView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_borderColor="@color/colorPrimary"
        app:qrcv_cornerColor="@color/colorPrimary"
        app:qrcv_cornerLength="35dp"
        app:qrcv_cornerSize="3dp"
        app:qrcv_maskColor="#33ffffff"
        app:qrcv_rectWidth="230dp"
        app:qrcv_scanLineColor="@color/colorPrimary"
        app:qrcv_scanLineSize="0.5dp"
        app:qrcv_tipTextColor="@color/colorPrimary"
        app:qrcv_tipTextSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:text="将二维码放入框内，即可自动扫描"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/myCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:text="我的码"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />


</RelativeLayout>